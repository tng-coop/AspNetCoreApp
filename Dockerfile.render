# Dockerfile.render

# Build Stage
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /app
COPY . .

# Ensure global tools path is available
ENV PATH="${PATH}:/root/.dotnet/tools"

# Install LibMan CLI and restore client-side libraries
RUN dotnet tool install --global Microsoft.Web.LibraryManager.Cli \
    && libman restore --verbosity detailed

# Restore and publish
RUN dotnet restore
RUN dotnet publish -c Release -o out

# Runtime Stage
FROM mcr.microsoft.com/dotnet/aspnet:9.0
WORKDIR /app
COPY --from=build /app/out .
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080
ENTRYPOINT ["dotnet", "BlazorWebApp.dll"]
