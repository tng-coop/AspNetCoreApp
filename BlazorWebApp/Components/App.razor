@using Microsoft.AspNetCore.Components.Routing
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />  
    @* <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" /> *@
    <!-- Bootstrap, app and Blazor styles -->
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap-icons/font/bootstrap-icons.min.css"]" />
    <link rel="stylesheet" href="@Assets["lib/fullcalendar/index.global.min.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["BlazorWebApp.styles.css"]" />

    <link href=@Assets["_content/MudBlazor/MudBlazor.min.css"] rel="stylesheet" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="PageRenderMode" />
</head>

<body>
    <Routes @rendermode="PageRenderMode" />
        <script>
        window.blazorCulture = {
            set: function (value) {
                localStorage.setItem("blazorCulture", value);
                document.cookie = "blazorCulture=" + value + "; path=/";
            },
            get: function () {
                const match = document.cookie.match(new RegExp('(^| )blazorCulture=([^;]+)'));
                return localStorage.getItem("blazorCulture") || (match ? match[2] : null) || "en";
            },
        };
    </script>
    <script src="_framework/blazor.web.js"></script>
    <script src=@Assets["treeMenuState.js"]></script>
    <script src="/lib/tinymce/tinymce.min.js"></script>
    <script src=@Assets["lib/fullcalendar/index.global.min.js"]></script>
    <script src=@Assets["calendarDemo.js"]></script>
    <script src=@Assets["_content/MudBlazor/MudBlazor.min.js"]></script>
</body>

</html>



 @code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? PageRenderMode =>
        HttpContext.AcceptsInteractiveRouting() ? InteractiveServer : null; 
}