@namespace BlazorWebApp.Components.Pages
@using MudBlazor

@inherits BlazorWebApp.Components.Shared.LocalizedComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<DemoDialog> L

<MudDialog>
    <TitleContent>@L["Demo Dialog"]</TitleContent>
    <DialogContent>
        @L["This is the body of your demo dialog."]
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["Close"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; } = null!;

    void Cancel() => MudDialog.Cancel();
}
