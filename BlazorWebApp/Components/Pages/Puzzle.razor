@page "/puzzle"
@rendermode InteractiveServer

<PageTitle>Puzzzle</PageTitle>

  <svg width="500" height="400" viewBox="0 0 500 400">
    <defs>
      <!-- Define random puzzle shapes -->
      <clipPath id="piece1"><path d="M0,0 L120,20 Q140,40 120,60 L100,100 L20,80 Q-10,40 0,0 Z"/></clipPath>
      <clipPath id="piece2"><path d="M100,10 L220,0 Q250,40 210,70 L120,90 Q90,60 100,10 Z"/></clipPath>
      <clipPath id="piece3"><path d="M200,0 L310,20 Q340,40 300,80 L220,60 Q190,30 200,0 Z"/></clipPath>
      <clipPath id="piece4"><path d="M300,10 L400,0 Q430,30 390,70 L320,90 Q290,60 300,10 Z"/></clipPath>
      <clipPath id="piece5"><path d="M390,0 L500,20 Q520,40 500,60 L450,90 Q400,60 390,0 Z"/></clipPath>
      <clipPath id="piece6"><path d="M0,100 L120,130 Q140,160 100,190 L20,170 Q-10,140 0,100 Z"/></clipPath>
      <clipPath id="piece7"><path d="M110,120 L220,110 Q250,150 200,190 L120,200 Q90,160 110,120 Z"/></clipPath>
      <clipPath id="piece8"><path d="M210,110 L310,120 Q340,160 300,200 L230,180 Q200,150 210,110 Z"/></clipPath>
      <clipPath id="piece9"><path d="M310,120 L400,110 Q430,150 390,190 L320,200 Q290,160 310,120 Z"/></clipPath>
      <clipPath id="piece10"><path d="M400,100 L500,130 Q520,160 480,190 L410,170 Q390,140 400,100 Z"/></clipPath>
    </defs>

    <!-- Image URL (Replace with your image URL) -->
    <image id="base-image" xlink:href="your-image.jpg" width="500" height="400" visibility="hidden"/>

    <!-- Puzzle pieces -->
    <g id="puzzle">
      <use xlink:href="#base-image" clip-path="url(#piece1)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece2)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece3)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece4)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece5)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece6)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece7)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece8)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece9)" class="piece"/>
      <use xlink:href="#base-image" clip-path="url(#piece10)" class="piece"/>
    </g>
  </svg>