@page "/counter"
@inherits BlazorWebApp.Components.Shared.LocalizedComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<Counter> L
<PageTitle>@L["Counter"]</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">@L["Counter"]</MudText>

<MudText Typo="Typo.body1" Class="mb-4">@string.Format(L["Current count"], currentCount)</MudText>

<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">@L["Click me"]</MudButton>
<MudButton Color="Color.Secondary" Variant="Variant.Filled" @onclick="IncrementCount">@L["Click me"]</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
